@model AtivosFinanceiros.Models.DepositoPrazo

@{
    ViewData["Title"] = "Adicionar Depósito a Prazo";
    Layout = null;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Message"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <form asp-controller="Ativos" asp-action="CreateDepositoPrazo" method="post">
                        <input type="hidden" asp-for="AtivoUuid" value="@ViewBag.AtivoUuid" />

                        <div class="form-group mb-3">
                            <label for="Banco">Banco:</label>
                            <input type="text" id="Banco" asp-for="Banco" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="NumeroConta">Número da Conta:</label>
                            <input type="text" id="NumeroConta" asp-for="NumeroConta" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Titulares">Titulares:</label>
                            <input type="text" id="Titulares" asp-for="Titulares" class="form-control" required />
                            <small class="form-text text-muted">Separe os nomes por vírgula. Ex: Geraldo, João, José</small>
                        </div>

                        <div class="form-group mb-3">
                            <label for="TaxaAnual">Taxa Anual (%):</label>
                            <input type="number" step="0.01" id="TaxaAnual" asp-for="TaxaJurosAnual" class="form-control" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="ValorInicial">Valor Inicial (€):</label>
                            <input type="number" step="0.01" id="ValorInicial" asp-for="ValorInicial" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Adicionar Depósito</button>
                    </form>

                    <a href="/Ativos/MeusAtivos" class="btn btn-danger mt-3 w-100">Cancelar</a>
                    <a asp-action="CreateAtivoo" class="btn btn-secondary mt-3 w-100">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />