@{
    ViewData["Title"] = "Confirmar Ativo";
    var ativo = ViewBag.Ativo as AtivosFinanceiros.Models.Ativo;
    var imovel = ViewBag.Imovel as AtivosFinanceiros.Models.ImovelArrendado;
    var fundo = ViewBag.Fundo as AtivosFinanceiros.Models.FundoInvestimento;
    var deposito = ViewBag.Deposito as AtivosFinanceiros.Models.DepositoPrazo;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@ativo.Nome (@ativo.TipoAtivo)</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Data de Início</dt>
                        <dd class="col-sm-8">@ativo.DataInicio.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Duração (meses)</dt>
                        <dd class="col-sm-8">@ativo.DuracaoMeses</dd>

                        <dt class="col-sm-4">Imposto (%)</dt>
                        <dd class="col-sm-8">@ativo.ImpostoPerc.ToString("P")</dd>

                        <dt class="col-sm-4">Lucro Total</dt>
                        <dd class="col-sm-8">@ativo.LucroTotal?.ToString("C")</dd>
                    </dl>

                    @if (ativo.TipoAtivo == "ImovelArrendado" && imovel != null)
                    {
                        <div class="card-footer bg-light">
                            <h5 class="fw-semibold">Informações do Imóvel Arrendado</h5>
                            <p><strong>Localização:</strong> @imovel.Localizacao</p>
                            <p><strong>Valor do Imóvel:</strong> @imovel.ValorImovel.ToString("C")</p>
                            <p><strong>Valor da Renda:</strong> @imovel.ValorRenda.ToString("C")</p>
                            <p><strong>Valor do Condomínio:</strong> @imovel.ValorCondominio.ToString("C")</p>
                            <p><strong>Despesas Anuais:</strong> @imovel.DespesasAnuais.ToString("C")</p>
                        </div>
                    }

                    @if (ativo.TipoAtivo == "FundoInvestimento" && fundo != null)
                    {
                        <div class="card-footer bg-light">
                            <h5 class="fw-semibold">Informações do Fundo de Investimento</h5>
                            <p><strong>Montante Investido:</strong> @fundo.MonteInvestido.ToString("C")</p>
                            <p><strong>Taxa de Juros Padrão:</strong> @fundo.TaxaJurosPadrao.ToString("P")</p>
                        </div>
                    }

                    @if (ativo.TipoAtivo == "DepositoPrazo" && deposito != null)
                    {
                        <div class="card-footer bg-light">
                            <h5 class="fw-semibold">Informações do Depósito a Prazo</h5>
                            <p><strong>Banco:</strong> @deposito.Banco</p>
                            <p><strong>Número da Conta:</strong> @deposito.NumeroConta</p>
                            <p><strong>Titulares:</strong></p>
                            <ul>
                                @foreach (var nome in deposito.Titulares.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <li>@nome.Trim()</li>
                                }
                            </ul>
                            <p><strong>Taxa Anual:</strong> @deposito.TaxaJurosAnual.ToString("P")</p>
                            <p><strong>Valor Inicial:</strong> @deposito.ValorInicial.ToString("C")</p>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form asp-action="ConfirmarAtivoSalvar" method="post">
                        <button type="submit" class="btn btn-success">Salvar</button>
                        <a asp-action="CreateAtivoo" class="btn btn-secondary" onclick="history.back(); return false;">Voltar</a>
                        <a href="/Ativos/MeusAtivos" class="btn btn-danger">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>